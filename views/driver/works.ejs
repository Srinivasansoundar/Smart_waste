<%layout("layout/boilerplate3.ejs")%>
    <link rel="stylesheet" href="styles/viewbin.css">
    <div class="container mt-5">
        <h1 class="h1">Garbage Mangament App</h1>
        <h3 class="h3 text-muted mb-4">View all works</h3>
        <div class="container">
            <div class="row">
                <% for (let complain of complaintsForDriver){%>
                    <div class="view-box col-5 me-4 mb-3">
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">Area:</p>
                            <p class="col-6 text-info">
                                <%=complain.bin.area%>
                            </p>
                        </div>
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">Landmark:</p>
                            <p class="col-6 text-info">
                                <%=complain.bin.landmark%>
                            </p>
                        </div>
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">City:</p>
                            <p class="col-6 text-info">
                                <%=complain.bin.city%>
                            </p class="col-6 text-info">
                        </div>
                        
                        <div class="form-group  px-2">
                            <p class="col-6 text-info">Best route:</p>
                            <p class="col-12 text-info">
                                <%=complain.bin.route%>
                            </p>
                        </div>
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">Complain:</p>
                            <p class="col-6 text-info">
                                <%=complain.complain%>
                            </p>
                        </div>
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">Status:</p>
                            <p class="col-6 text-success">
                                <%=complain.Status%>
                            </p>
                        </div>
                        <form action="/driver_works/update_status/<%=complain._id%>"  method="GET" class="text-center">
                            <button class="btn btn-success">Update Status</button>
                        </form>
                        
                    </div>

                    <%}%>
            </div>
        </div>
    </div>