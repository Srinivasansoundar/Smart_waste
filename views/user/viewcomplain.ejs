<%layout("layout/boilerplate2")%>
<link rel="stylesheet" href="styles/viewbin.css">
<div class="container mt-5">
    <h1 class="h1">Garbage Mangament App</h1>
    <h3 class="h3 text-muted mb-4">My complains</h3>
    <div class="container">
        <div class="row">
            <% for (let complain of complains){%>
                <div class="view-box col-5 me-4 mb-3">
                    <div class="form-group row px-2 fw-bold">
                        <p class="col-6 text-info "> bin id:</p>
                        <p class="col-6 text-info">
                            <%=complain.bin.id%>
                        </p>
                    </div>
                    <div class="form-group row px-2 fw-bold">
                        <p class="col-6 text-info">Area:</p>
                        <p class="col-6 text-info">
                            <%=complain.bin.area%>
                        </p>
                    </div>
                    <div class="form-group row px-2 fw-bold">
                        <p class="col-6 text-info">City:</p>
                        <p class="col-6 text-info">
                            <%=complain.bin.city%>
                        </p class="col-6 text-info">
                    </div>
                    <div class="form-group row px-2 fw-bold">
                        <p class="col-6 text-info">Complain:</p>
                        <p class="col-6 text-info">
                            <%=complain.complain%>
                        </p>
                    </div>
                    <div class="form-group row fw-bold px-2 ">
                        <p class="col-6 text-info ">Status:</p>
                        <p class="col-6 text-success">
                            <%=complain.Status%>
                        </p>
                    </div>
                    <form action="/deletecomplain/<%=complain._id%>?_method=DELETE"   method="POST">
                         <button class="btn btn-danger text-center">Delete</button>
                    </form>
                </div>
                

                <%}%>
        </div>
        

    </div>
</div>