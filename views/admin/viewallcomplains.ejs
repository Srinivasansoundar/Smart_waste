<%layout("layout/boilerplate")%>
    <link rel="stylesheet" href="styles/viewbin.css">
    <div class="container mt-5">
        <h1 class="h1">Garbage Mangament App</h1>
        <h3 class="h3 text-muted mb-4">View all bins</h3>
        <div class="container">
            <div class="row">
                <% for (let complain of complains){%>
                    <div class="view-box col-5 me-4 mb-3">
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">Bin id:</p>
                            <p class="col-6 text-info">
                                <%=complain.bin.id%>
                            </p>
                        </div>
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">Area:</p>
                            <p class="col-6 text-info">
                                <%=complain.bin.area%>
                            </p>
                        </div>
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">Complains:</p>
                            <p class="col-12 text-info">
                                <%=complain.complain%>
                            </p class="col-6 text-info">
                        </div>
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">Driver email:</p>
                            <p class="col-6 text-info">
                                <%=complain.bin.email%>
                            </p>
                        </div>
                        <div class="form-group row px-2">
                            <p class="col-6 text-info">Status</p>
                            <p class="col-6 text-success">
                                <%=complain.Status%>
                            </p>
                        </div>
                        
                    </div>

                    <%}%>
            </div>
        </div>
    </div>